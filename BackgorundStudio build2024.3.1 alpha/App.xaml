<Application x:Class="BackgorundStudio_build2024._3._1_alpha.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BackgorundStudio_build2024._3._1_alpha"
             xmlns:tb="http://www.hardcodet.net/taskbar" xmlns:local1="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
             >
    <Application.Resources>

        <ContextMenu x:Shared="false" x:Key="ContextMenu">
            <MenuItem Name="OpenOptForm" Click="OpenOptForm_Click" Header="打开控制面板"/>
            <Separator></Separator>
            <MenuItem Name="Close" Click="Close_Click" Header="退出"/>
        </ContextMenu>

        <tb:TaskbarIcon x:Key="Taskbar"
                        ContextMenu="{StaticResource ContextMenu}"
                        ToolTipText="BackgorundStudio"
                        IconSource="TaskbarIcon.ico">
        </tb:TaskbarIcon>

    </Application.Resources>
</Application>
