<Window x:Class="Clock.ClockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Height="134" Width="834" 
        ResizeMode="NoResize"
        Background="#00000000" RenderTransformOrigin="0.5,0.5" ShowInTaskbar="False" Title="Clock" WindowStyle="None" AllowsTransparency="True"
        Loaded="Window_Loaded"
        >
    <Viewbox>
        <Grid>
            <Label x:Name="Time_Label" Content="00 : 00 : 00" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#FFF1F1F1" FontSize="100" FontFamily="Bahnschrift Light" FontWeight="Bold"/>
            <Label x:Name="Week_Label" Content="Monday" HorizontalAlignment="Left" Margin="488,10,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift Light" FontWeight="Bold" FontSize="40" Foreground="#FFF1F1F1" RenderTransformOrigin="-0.04,0.489"/>
            <Label x:Name="Year_Label" Content="2024 - 1 - 1" HorizontalAlignment="Left" Margin="488,65,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift Light" FontSize="40" FontWeight="Bold" Foreground="#FFF1F1F1"/>
        </Grid>
    </Viewbox>
</Window>
