<Window x:Class="MainMediaPlayer.MediaPlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainMediaPlayer"
        mc:Ignorable="d"
        Title="MediaPlayer" Height="400" Width="400"
        WindowStyle="None"
        Background="Black"
        Loaded="Window_Loaded"
        Activated="Window_Activated"
        StateChanged="Window_StateChanged" ShowInTaskbar="False"
        >
    <Grid >
        <Grid x:Name="Workspace"/>
        <MediaElement x:Name="mediaElement" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"  Width="400" Height="400" MediaEnded="mediaElement_MediaEnded" />
        <Image x:Name="image" Margin="0,0,0,0" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="400" Height="400"/>
    </Grid>
</Window>
